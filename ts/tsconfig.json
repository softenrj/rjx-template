{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", 
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },

    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
